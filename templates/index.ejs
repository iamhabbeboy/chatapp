      var email = $('#email1')
      var pass1 = $('#pass1')
      if(email.val() == '') {
        email.focus();
        return false;
      } else if(pass1.val() === '' ) {
        pass1.focus();
        return false;
      } else {
        $.post('/login_auth', 'email='+email.val() +'&password='+pass1.val(),
        function(callback) {
          if(callback==='logged_in') {
            window.location = '/home';
